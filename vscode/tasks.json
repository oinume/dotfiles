{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open Current File with IntelliJ IDEA",
            "type": "shell",
            "command": "idea",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",    // エラーがなければターミナルを表示しない
                "focus": false,         // ターミナルにフォーカスを移さない
                "panel": "shared",      // 他のタスクとターミナルを共有する
                "showReuseMessage": false, // 「完了しました。キーを押すと閉じます」を出さない
                "clear": true           // 実行前にターミナルを綺麗にする
            },
             "problemMatcher": []
        }
    ]
}